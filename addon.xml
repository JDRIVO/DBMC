<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.dbmc" name="DBMC" version="1.0.0" provider-name="JDRIVO">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.dropbox" version="10.3.1+matrix.1" />
        <import addon="script.common.plugin.cache" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video image audio executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <language>en</language>
        <summary lang="en">Dropbox file browser</summary>
        <summary lang="nl">Dropbox bestandsverkenner</summary>
        <summary lang="it">Browser di file Dropbox</summary>
        <description lang="en">Access and manage your Dropbox files and folders. DBMC is not affiliated with or otherwise sponsored by Dropbox, Inc.</description>
        <description lang="nl">Toegang tot en beheer van uw Dropbox bestanden en mappen. DBMC is niet aangesloten bij of anderszins gesponsord door Dropbox, Inc.</description>
        <description lang="it">Accedi e gestisci i tuoi file e cartelle Dropbox. DBMC non è in alcun modo affiliato o in qualche modo sponsorizzato da Dropbox, Inc.</description>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=172902</forum>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
